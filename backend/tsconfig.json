{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "types": ["node"],
    "moduleResolution": "node",

    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
